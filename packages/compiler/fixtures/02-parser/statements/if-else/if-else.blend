module IfElse;

@zp let value: byte = 10;
@zp let result: byte = 0;

function main(): void {
    // Basic if-else
    if (value > 5) {
        result = 1;
    } else {
        result = 0;
    }
    
    // If-else with equality
    if (value == 10) {
        result = 10;
    } else {
        result = 0;
    }
    
    // If-else with multiple statements in each branch
    if (value > 50) {
        result = 100;
        poke($0400, result);
    } else {
        result = 50;
        poke($0400, result);
    }
    
    // Nested if-else in else branch
    if (value > 100) {
        result = 200;
    } else {
        if (value > 10) {
            result = 20;
        } else {
            result = 5;
        }
    }
    
    // Store final result
    poke($0401, result);
}