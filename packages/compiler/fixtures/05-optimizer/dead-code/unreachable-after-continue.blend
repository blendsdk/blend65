module UnreachableAfterContinue;

function sumEvenOnly(): byte {
    let sum: byte = 0;
    
    for (i = 0 to 10) {
        if ((i & 1) == 1) {
            // Skip odd numbers
            continue;
            // This code is unreachable after continue
            sum = sum + 100;
            poke($D020, 2);
        }
        sum = sum + i;
    }
    
    return sum;
}

function main(): void {
    let result: byte = sumEvenOnly();
    poke($0400, result);
}